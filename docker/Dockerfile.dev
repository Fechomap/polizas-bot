# ============================================
# Dockerfile para desarrollo
# ============================================
FROM node:22-alpine

WORKDIR /app

# Instalar dependencias para sharp y herramientas de desarrollo
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    vips-dev

# Copiar package.json primero para aprovechar cache
COPY package*.json ./
COPY prisma ./prisma/

# Instalar dependencias (incluyendo devDependencies)
RUN npm install && npx prisma generate

# El código fuente se monta como volumen en docker-compose
# No copiar aquí para hot-reload

ENV NODE_ENV=development
ENV PORT=3000

EXPOSE 3000

# Usar ts-node para desarrollo con hot-reload
CMD ["npm", "run", "dev"]
